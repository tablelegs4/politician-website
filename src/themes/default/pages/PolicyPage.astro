---
// デフォルトテーマの政策ページ
import { getCollection } from 'astro:content';

// URLパラメータを保持する関数
const themeParam = Astro.url.searchParams.get('theme');
const themeQuery = themeParam ? `?theme=${themeParam}` : '';

// ベースパスを適用したパスを生成する関数
const baseUrl = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}${themeQuery}`;
};

// 画像パスにベースを適用
const withImageBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}`;
};

// コンテンツコレクションから政策を取得
const allPolicies = await getCollection('policy');

// 重点政策（featured: true）を先にソート
const featuredPolicies = allPolicies
  .filter(p => p.data.featured)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// 通常政策（featured: false または未設定）
const otherPolicies = allPolicies
  .filter(p => !p.data.featured)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// summaryからマークダウン記法を除去するヘルパー
const cleanSummary = (text: string) => text.replace(/\*([^*]+)\*/g, '$1');
---

<main>
  <div class="container">
    <h1 class="page-title-with-kokusa">
      政策
      <img src={withImageBase('/images/common/kokusa/kokusa_hold_sign_1.png')} alt="" class="page-title-kokusa" />
    </h1>
    <p class="policy-lead">暮らしを豊かにするための重点政策をご紹介します。</p>

    {featuredPolicies.length > 0 && (
      <section class="policy-section">
        <h2 class="section-title">
          重点政策
          <img src={withImageBase('/images/common/kokusa/kokusa_fistpump.png')} alt="" class="section-kokusa" />
        </h2>
        <ul class="policy-list featured-list">
          {featuredPolicies.map((policy) => (
            <li class="policy-item featured">
              <a href={withBase(`/policy/${policy.data.slug || policy.id.replace(/\.mdx?$/, '')}/`)} class="policy-link">
                <div class="policy-content">
                  <span class="policy-category">{policy.data.category}</span>
                  <h3>{policy.data.title}</h3>
                  <p class="policy-summary">{cleanSummary(policy.data.summary)}</p>
                </div>
                <div class="policy-footer">
                  <span class="policy-more">政策の詳細を見る →</span>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}

    {otherPolicies.length > 0 && (
      <section class="policy-section">
        <h2 class="section-title">
          その他の政策
          <img src={withImageBase('/images/common/kokusa/kokusa_think.png')} alt="" class="section-kokusa" />
        </h2>
        <ul class="policy-list">
          {otherPolicies.map((policy) => (
            <li class="policy-item">
              <a href={withBase(`/policy/${policy.data.slug || policy.id.replace(/\.mdx?$/, '')}/`)} class="policy-link">
                <div class="policy-content">
                  <span class="policy-category">{policy.data.category}</span>
                  <h3>{policy.data.title}</h3>
                  <p class="policy-summary">{cleanSummary(policy.data.summary)}</p>
                </div>
                <div class="policy-footer">
                  <span class="policy-more">政策の詳細を見る →</span>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}

    <section class="message-link-section">
      <a href={withBase('/#message')} class="message-link">
        <span class="message-link-text">魂のメッセージを見る</span>
        <span class="message-link-arrow">→</span>
      </a>
    </section>

    <section class="cta-section">
      <img src={withImageBase('/images/common/kokusa/kokusa_please.png')} alt="" class="cta-kokusa" />
      <p>政策について詳しく知りたい方、ご意見・ご質問がある方は、お気軽にお問い合わせください。</p>
      <div class="cta-buttons">
        <a href={withBase('/contact/')} class="btn btn-primary">相談・要望を送る</a>
      </div>
    </section>
  </div>
</main>

<style>
  .policy-lead {
    font-size: 1.125rem;
    color: #000;
    margin-bottom: 2rem;
  }

  .policy-section {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.25rem;
    color: #043e80;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #043e80;
  }

  .policy-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 1.5rem;
  }

  .featured-list {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .policy-item {
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .policy-item:hover {
    border-color: #043e80;
    box-shadow: 0 6px 20px rgba(4, 62, 128, 0.12);
    transform: translateY(-3px);
    background: linear-gradient(to bottom, #ffffff 0%, #f8fafc 100%);
  }

  .policy-item.featured {
    border-left: 5px solid #043e80;
    box-shadow: 0 3px 12px rgba(4, 62, 128, 0.08);
  }

  .policy-item.featured:hover {
    box-shadow: 0 8px 24px rgba(4, 62, 128, 0.15);
  }

  .policy-link {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .policy-content {
    flex-grow: 1;
  }

  .policy-footer {
    padding-top: 1rem;
    border-top: 1px solid #e8f0f8;
    margin-top: 0.75rem;
  }

  .policy-category {
    display: inline-block;
    background: linear-gradient(135deg, #043e80 0%, #065ba8 100%);
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 700;
    padding: 0.375rem 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
    box-shadow: 0 2px 4px rgba(4, 62, 128, 0.2);
    letter-spacing: 0.02em;
  }

  .policy-item h3 {
    font-size: 1.125rem;
    color: #043e80;
    margin: 0 0 0.75rem;
    line-height: 1.4;
    font-weight: bold;
  }

  /* SP向けにタイトルをさらに大きく */
  @media (max-width: 767px) {
    .policy-item {
      border-radius: 10px;
      box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
    }

    .policy-item h3 {
      font-size: 1.25rem;
      line-height: 1.5;
    }

    .policy-link {
      padding: 1.75rem 1.5rem;
    }

    .policy-summary {
      font-size: 1rem;
      line-height: 1.8;
    }

    .policy-category {
      font-size: 0.9375rem;
      padding: 0.4rem 1.1rem;
    }

    .policy-more {
      font-size: 1rem;
    }

    .policy-footer {
      padding-top: 0.875rem;
    }

    .policy-item:hover {
      transform: translateY(-2px);
    }
  }

  .policy-summary {
    font-size: 0.9375rem;
    color: #000;
    line-height: 1.7;
    margin: 0;
  }

  .policy-more {
    font-size: 0.9375rem;
    color: #043e80;
    font-weight: 600;
    transition: all 0.2s;
  }

  .policy-item:hover .policy-more {
    color: #f5b500;
  }

  /* 魂のメッセージリンクセクション */
  .message-link-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .message-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: #f8fafc;
    border: 2px solid #043e80;
    border-radius: 8px;
    color: #043e80;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.2s;
  }

  .message-link:hover {
    background: #043e80;
    color: #fff;
    text-decoration: none;
  }

  .message-link-text {
    font-size: 1rem;
  }

  .message-link-arrow {
    font-size: 1.25rem;
    transition: transform 0.2s;
  }

  .message-link:hover .message-link-arrow {
    transform: translateX(4px);
  }

  .cta-section {
    text-align: center;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 8px;
  }

  .cta-section p {
    margin-bottom: 1rem;
    color: #000;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: #043e80;
    color: #fff;
    border: 2px solid #043e80;
  }

  .btn-primary:hover {
    background: #032f5e;
    border-color: #032f5e;
  }

  @media (max-width: 767px) {
    .featured-list {
      grid-template-columns: 1fr;
    }

    .policy-link {
      padding: 1.25rem;
    }
  }

  /* こくさキャラクター装飾 */
  .page-title-with-kokusa {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .page-title-kokusa {
    height: 3rem;
    width: auto;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-kokusa {
    height: 2rem;
    width: auto;
  }

  .cta-section {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .cta-kokusa {
    height: 80px;
    width: auto;
    margin-bottom: 1rem;
  }

  @media (max-width: 767px) {
    .page-title-kokusa {
      height: 2.5rem;
    }

    .section-kokusa {
      height: 1.75rem;
    }

    .cta-kokusa {
      height: 60px;
    }
  }
</style>
