---
import { getCollection } from 'astro:content';
import { THEME_IMAGES } from '../../../config/theme';
import { getSiteConfig, getProfile } from '../../../utils/content';
import { getNoteArticles } from '../../../utils/note';

// アスタリスク囲みのテキストを強調表示に変換する関数
const formatWithEmphasis = (text: string) => {
  return text.replace(/\*([^*]+)\*/g, '<strong class="emphasis">$1</strong>');
};

// コンテンツ読み込み
const siteConfig = getSiteConfig();
const profile = getProfile();

// URLパラメータを保持する関数
const themeParam = Astro.url.searchParams.get('theme');
const themeQuery = themeParam ? `?theme=${themeParam}` : '';

// ベースパスを適用したパスを生成する関数
const baseUrl = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}${themeQuery}`;
};

// 画像パスにベースを適用
const withImageBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}`;
};

// 活動報告リンク設定
const activityLinks = siteConfig.activityLinks || {};

// 外部リンク設定
const externalLinks = siteConfig.externalLinks || {};

// 支援リンク設定
const supportLinks = siteConfig.support || {};

// noteの記事を取得（ビルド時に自動更新）
const noteUsername = activityLinks.note ? activityLinks.note.replace('https://note.com/', '').replace(/\/$/, '') : '';
const noteArticles = noteUsername ? await getNoteArticles(noteUsername, 5) : [];

// 重点政策3件を取得
let featuredPolicies: any[] = [];
try {
  const allPolicies = await getCollection('policy');
  featuredPolicies = allPolicies
    .filter(entry => entry.data.featured)
    .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
    .slice(0, 3);
} catch {
  // 政策がない場合は空配列
}

// 日付フォーマット関数
const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  }).replace(/\//g, '-');
};

// summaryを「。」で改行し、*で囲んだ部分を強調するフォーマット関数
const formatSummary = (summary: string) => {
  // *で囲んだ部分を赤太字に変換
  const emphasized = summary.replace(/\*([^*]+)\*/g, '<strong class="emphasis">$1</strong>');
  // 。で改行
  return emphasized.split('。').filter(s => s.trim()).map(s => s + '。').join('<br>');
};

// ヒーロータイトル用：*で囲んだ部分を強調（大きく力強く、赤文字・黄色背景）
const formatHeroTitle = (title: string) => {
  return title.replace(/\*([^*]+)\*/g, '<span class="hero-emphasis">$1</span>');
};

// 信頼要素の表示判定
const isIncumbent = siteConfig.trustElements.mode === 'incumbent';
const incumbentData = siteConfig.trustElements.incumbent;

// TOPページに実績を表示するかの判定
const showAchievementsOnTop = profile.showAchievementsOnTop && profile.achievements && profile.achievements.length > 0;

---

<main id="top">
  <!-- =====================================
       3-1. ファーストビュー（1スクロール以内）
       レイアウトパターン: ?top=1〜5 で切り替え（クライアントサイドJS）
       ===================================== -->

  {/* ========== TOP画像を大きく表示、要素は画像の下 ========== */}
  <section class="hero-section hero-layout-1">
    <div class="hero-full-image">
      <img src={THEME_IMAGES.default.hero} alt={`${siteConfig.politician.name}の写真`} class="hero-image-large" loading="eager" />
    </div>
    <div class="hero-content-below">
      <div class="container">
        <h1 class="hero-title" set:html={formatHeroTitle(siteConfig.hero.title)}></h1>
        <p class="hero-subtitle">{siteConfig.hero.subtitle}</p>
        {isIncumbent && incumbentData.proposals > 0 && (
          <div class="trust-elements">
            <div class="trust-item">
              <span class="trust-number">{incumbentData.proposals}</span>
              <span class="trust-label">件の提案</span>
            </div>
            <div class="trust-item">
              <span class="trust-number">{incumbentData.questions}</span>
              <span class="trust-label">回の質問</span>
            </div>
            <div class="trust-item">
              <span class="trust-number">{incumbentData.cases}</span>
              <span class="trust-label">件の対応</span>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>


  <div class="container">
    <div class="two-column-layout">
      <!-- メインコンテンツ -->
      <div class="main-content">
        <!-- =====================================
             3-2. 重点ブロック（TOP中段）
             ===================================== -->

        <!-- 重点政策 -->
        <section id="policy" class="section-block policy-section">
          <h2 class="section-title"><span>重点政策</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_fistpump.png')} alt="" class="section-title-kokusa" /></span></h2>
          {featuredPolicies.length > 0 ? (
            <div class="policy-cards policy-cards-linked">
              {featuredPolicies.map((policy) => (
                <a href={withBase(`/policy/${policy.data.slug || policy.id.replace(/\.mdx?$/, '')}/`)} class="policy-card-link-wrapper">
                  <article class="policy-card">
                    <span class="policy-category">{policy.data.category}</span>
                    <h3 class="policy-card-title">{policy.data.title}</h3>
                    <p class="policy-card-summary" set:html={formatSummary(policy.data.summary)}></p>
                    <div class="policy-card-footer">
                      <span class="policy-card-more-text">政策の詳細を見る</span>
                      <span class="policy-card-arrow">→</span>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          ) : (
            <p class="no-content">政策を準備中です。</p>
          )}
          <div class="section-more">
            <a href={withBase('/policy/')} class="btn btn-outline">政策一覧を見る</a>
          </div>
        </section>

        <!-- 魂のメッセージ：政治家の動機・原体験 -->
        {siteConfig.messages && siteConfig.messages.length > 0 && (
          <section id="message" class="section-block messages-section">
            <h2 class="section-title"><span>魂のメッセージ</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_speech.png')} alt="" class="section-title-kokusa" /></span></h2>
            <div class="messages-list">
              {siteConfig.messages.map((item) => (
                <div class="message-item">
                  <h3 class="message-question">{item.question}</h3>
                  <p class="message-answer" set:html={formatWithEmphasis(item.answer)}></p>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- SP向けプロフィール（玉木方式）：メッセージと活動報告の間 -->
        <section id="profile" class="mobile-profile-section">
          <h2 class="section-title"><span>プロフィール</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_confront.png')} alt="" class="section-title-kokusa" /></span></h2>
          <div class="mobile-profile-content">
            {profile.nickname && <p class="mobile-profile-nickname" set:html={formatWithEmphasis(profile.nickname)} />}
            <h3 class="mobile-profile-name">
              {profile.nameReading && <ruby>{profile.name}<rp>(</rp><rt>{profile.nameReading}</rt><rp>)</rp></ruby>}
              {!profile.nameReading && profile.name}
            </h3>
            <div class="mobile-profile-image-wrapper">
              <img
                src={withImageBase(profile.photo)}
                alt={`${profile.name}のプロフィール写真`}
                class="mobile-profile-image"
                loading="lazy"
              />
            </div>
            {profile.basicInfo?.activityArea && (
              <p class="mobile-profile-district">{profile.basicInfo.activityArea}</p>
            )}
            <a href={withBase('/profile/')} class="btn btn-outline mobile-profile-btn">
              詳しくプロフィールを見る
            </a>
            {showAchievementsOnTop && (
              <div class="mobile-profile-achievements">
                <h4 class="mobile-achievements-title">実績</h4>
                <ul class="mobile-achievements-list">
                  {profile.achievements?.map((item: string) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            )}
            {(activityLinks.youtube || activityLinks.twitter || activityLinks.instagram || activityLinks.tiktok || activityLinks.note) && (
              <div class="mobile-profile-sns-links">
                {activityLinks.youtube && (
                  <a href={activityLinks.youtube} class="mobile-profile-sns-link mobile-profile-sns-youtube" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  </a>
                )}
                {activityLinks.twitter && (
                  <a href={activityLinks.twitter} class="mobile-profile-sns-link mobile-profile-sns-x" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </a>
                )}
                {activityLinks.instagram && (
                  <a href={activityLinks.instagram} class="mobile-profile-sns-link mobile-profile-sns-instagram" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>
                )}
                {activityLinks.tiktok && (
                  <a href={activityLinks.tiktok} class="mobile-profile-sns-link mobile-profile-sns-tiktok" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                    </svg>
                  </a>
                )}
                {activityLinks.note && (
                  <a href={activityLinks.note} class="mobile-profile-sns-link mobile-profile-sns-note" target="_blank" rel="noopener noreferrer" aria-label="note">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12.73 16.96h1.86v-.92c.6.71 1.46 1.1 2.47 1.1 2.14 0 3.63-1.72 3.63-4.13 0-2.36-1.45-4.08-3.54-4.08-1.05 0-1.96.42-2.56 1.15V6.94h-1.86v10.02zm3.89-1.4c-1.33 0-2.24-1.05-2.24-2.57 0-1.53.91-2.6 2.24-2.6 1.32 0 2.2 1.05 2.2 2.6 0 1.53-.88 2.57-2.2 2.57zM3.31 8.93v1.52h2.59v6.51h1.87V8.93H3.31zm5.62 8.03h1.86v-4.73c0-1.04.68-1.83 1.63-1.83.95 0 1.48.67 1.48 1.72v4.84h1.86v-5.07c0-1.83-1.04-2.96-2.71-2.96-1.1 0-1.94.51-2.38 1.28h-.07l-.11-1.1H8.93v7.85z"/>
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>
        </section>

        <!-- 最新活動：noteから自動取得 -->
        <section id="activity" class="section-block activity-section">
          <h2 class="section-title">
            <span class="activity-title-text"><span class="activity-title-prefix">最新の</span>活動報告</span>
            <span class="section-title-kokusa-wrapper activity-kokusa"><img src={withImageBase('/images/common/kokusa/kokusa_run.png')} alt="" class="section-title-kokusa" /></span>
          </h2>
          {noteArticles.length > 0 ? (
            <ul class="note-article-list">
              {noteArticles.map((article) => (
                <li class="note-article-item">
                  <a href={article.link} class="note-article-link" target="_blank" rel="noopener noreferrer">
                    {article.thumbnail && (
                      <div class="note-article-thumbnail">
                        <img src={article.thumbnail} alt="" loading="lazy" />
                      </div>
                    )}
                    <div class="note-article-content">
                      <time class="note-article-date" datetime={article.pubDate.toISOString()}>
                        {formatDate(article.pubDate)}
                      </time>
                      <h3 class="note-article-title">{article.title}</h3>
                      {article.description && (
                        <p class="note-article-description">{article.description.slice(0, 100)}{article.description.length > 100 ? '...' : ''}</p>
                      )}
                    </div>
                    <span class="note-article-external">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                      </svg>
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            <p class="no-content">現在、活動報告はありません。</p>
          )}
          {activityLinks.note && (
            <div class="section-more">
              <a href={activityLinks.note} class="btn btn-outline" target="_blank" rel="noopener noreferrer">
                noteで活動報告をもっと見る
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-left: 0.5rem; vertical-align: middle;">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            </div>
          )}
        </section>

        <!-- 相談誘導セクション（活動報告の下） -->
        <section class="consultation-cta">
          <div class="consultation-cta-content">
            <h2 class="consultation-cta-title">お困りごと、ありませんか？</h2>
            <div class="consultation-description-row">
              <img src={withImageBase('/images/common/kokusa/kokusa_listen.png')} alt="" class="consultation-kokusa consultation-kokusa-left" />
              <p class="consultation-cta-description">
                地域の課題やお困りごと、<br />
                お気軽にお聞かせください。<br />
                一つひとつ丁寧にお応えします。
              </p>
            </div>
            <div class="consultation-cta-buttons">
              <a href={withBase(siteConfig.cta.primary.url)} class="btn btn-primary btn-large">
                {siteConfig.cta.primary.label}
              </a>
            </div>
            <p class="consultation-cta-note">※ 個人情報は厳重に管理いたします</p>
          </div>
          <img src={withImageBase('/images/common/kokusa/kokusa_please.png')} alt="" class="consultation-kokusa consultation-kokusa-right" />
        </section>

        <!-- FAQ：国民民主党によくある質問 -->
        <section id="faq" class="section-block faq-section">
          <h2 class="section-title faq-title-custom">
            <span class="faq-title-kokusa"><img src={withImageBase('/images/common/kokusa/kokusa_confront.png')} alt="" /></span>
            <span class="faq-title-text">
              <span class="faq-title-name">{profile.nameReading}</span>
              <span class="faq-title-sub">が答える！</span>
              <!-- 【切り替え】2行版（現在有効）↓ -->
              <span class="faq-title-main faq-title-main--two-line"><span class="faq-title-party">国民民主党に</span><span class="faq-title-faq">よくある質問！</span></span>
              <!-- 【切り替え】1行版（使う場合は上をコメントアウトし、下を有効に）↓
              <span class="faq-title-main">国民民主党によくある質問！</span>
              -->
            </span>
          </h2>
          <div class="faq-list">
            <details class="faq-item">
              <summary class="faq-question">他の政党と違うところは？</summary>
              <div class="faq-answer">
                <p class="faq-lead">我々は「対決より解決」です！</p>
                <p class="faq-detail" set:html={formatWithEmphasis('与党の言いなりでも、何でも反対でもない。政策本位で*是々非々の姿勢*を貫き、*国民のための政治*を実現します。')} />
              </div>
            </details>
            <details class="faq-item">
              <summary class="faq-question">財政に対してどう考えているの？</summary>
              <div class="faq-answer">
                <p class="faq-lead">経済成長と財政健全化の両立を目指します！</p>
                <p class="faq-detail" set:html={formatWithEmphasis('増税ではなく、*経済成長による税収増*で財政を立て直します。まずは国民の可処分所得を増やし、消費を活性化させることが重要です。')} />
              </div>
            </details>
            <details class="faq-item">
              <summary class="faq-question">ハイパーインフレを起こす政党なんですか？</summary>
              <div class="faq-answer">
                <p class="faq-lead">いいえ、現実的な経済政策を提案しています！</p>
                <p class="faq-detail" set:html={formatWithEmphasis('日本は*デフレからの脱却が必要*です。適度なインフレを目指し、金融政策と財政政策を組み合わせた*現実的なアプローチ*を取っています。')} />
              </div>
            </details>
            <details class="faq-item">
              <summary class="faq-question">国債発行は未来に借金を残すことでは？</summary>
              <div class="faq-answer">
                <p class="faq-lead">投資と浪費は違います！</p>
                <p class="faq-detail" set:html={formatWithEmphasis('将来の成長につながる投資（教育・研究開発・インフラ）は、むしろ*次世代への贈り物*。大切なのは、借りたお金を何に使うかです。')} />
              </div>
            </details>
            <details class="faq-item">
              <summary class="faq-question">労働組合の言いなりになってない？</summary>
              <div class="faq-answer">
                <p class="faq-lead">全く言いなりになっていません！</p>
                <p class="faq-detail" set:html={formatWithEmphasis('支持母体の労働組合の意見は聞きますが、最終的な判断は*国民全体の利益*を考えて行います。むしろ働く人の声を政治に届けることは民主主義の基本です。')} />
              </div>
            </details>
          </div>
          <div class="section-more">
            <a href={withBase('/faq/')} class="btn btn-outline">よくある質問一覧</a>
          </div>
        </section>

        <!-- 支援のお願い（党サポ・寄付・後援会） -->
        <section id="support" class="support-section">
          <h2 class="section-title"><span><span class="support-title-large">応援</span>お願いします！</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_bow.png')} alt="" class="section-title-kokusa" /></span></h2>
          <p class="support-lead">皆様のご支援が、政治活動の力になります！</p>
