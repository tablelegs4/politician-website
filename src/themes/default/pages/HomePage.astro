---
import { getCollection } from 'astro:content';
import { THEME_IMAGES } from '../../../config/theme';
import { getSiteConfig, getProfile, getFeaturedFaq } from '../../../utils/content';

// アスタリスク囲みのテキストを強調表示に変換する関数
const formatWithEmphasis = (text: string) => {
  return text.replace(/\*([^*]+)\*/g, '<strong class="emphasis">$1</strong>');
};

// コンテンツ読み込み
const siteConfig = getSiteConfig();
const profile = getProfile();
const featuredFaq = getFeaturedFaq(3);

// URLパラメータを保持する関数
const themeParam = Astro.url.searchParams.get('theme');
const themeQuery = themeParam ? `?theme=${themeParam}` : '';

// ベースパスを適用したパスを生成する関数
const baseUrl = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}${themeQuery}`;
};

// 画像パスにベースを適用
const withImageBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}`;
};

// 最新活動報告3件を取得（activityがあればactivity、なければnewsを使用）
let latestActivities: any[] = [];
try {
  const allActivities = await getCollection('activity');
  latestActivities = allActivities
    .filter(entry => !entry.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .slice(0, 3);
} catch {
  // activityがない場合はnewsを使用
  const allNews = await getCollection('news');
  latestActivities = allNews
    .filter(entry => !entry.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .slice(0, 3);
}

// 重点政策3件を取得
let featuredPolicies: any[] = [];
try {
  const allPolicies = await getCollection('policy');
  featuredPolicies = allPolicies
    .filter(entry => entry.data.featured)
    .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
    .slice(0, 3);
} catch {
  // 政策がない場合は空配列
}

// 日付フォーマット関数
const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  }).replace(/\//g, '-');
};

// summaryを「。」で改行し、*で囲んだ部分を強調するフォーマット関数
const formatSummary = (summary: string) => {
  // *で囲んだ部分を赤太字に変換
  const emphasized = summary.replace(/\*([^*]+)\*/g, '<strong class="emphasis">$1</strong>');
  // 。で改行
  return emphasized.split('。').filter(s => s.trim()).map(s => s + '。').join('<br>');
};

// ヒーロータイトル用：*で囲んだ部分を強調（大きく力強く、赤文字・黄色背景）
const formatHeroTitle = (title: string) => {
  return title.replace(/\*([^*]+)\*/g, '<span class="hero-emphasis">$1</span>');
};

// 信頼要素の表示判定
const isIncumbent = siteConfig.trustElements.mode === 'incumbent';
const incumbentData = siteConfig.trustElements.incumbent;

---

<main>
  <!-- =====================================
       3-1. ファーストビュー（1スクロール以内）
       レイアウトパターン: ?top=1〜5 で切り替え（クライアントサイドJS）
       ===================================== -->

  {/* ========== TOP画像を大きく表示、要素は画像の下 ========== */}
  <section class="hero-section hero-layout-1">
    <div class="hero-full-image">
      <img src={THEME_IMAGES.default.hero} alt={`${siteConfig.politician.name}の写真`} class="hero-image-large" loading="eager" />
    </div>
    <div class="hero-content-below">
      <div class="container">
        <h1 class="hero-title" set:html={formatHeroTitle(siteConfig.hero.title)}></h1>
        <p class="hero-subtitle">{siteConfig.hero.subtitle}</p>
        {isIncumbent && incumbentData.proposals > 0 && (
          <div class="trust-elements">
            <div class="trust-item">
              <span class="trust-number">{incumbentData.proposals}</span>
              <span class="trust-label">件の提案</span>
            </div>
            <div class="trust-item">
              <span class="trust-number">{incumbentData.questions}</span>
              <span class="trust-label">回の質問</span>
            </div>
            <div class="trust-item">
              <span class="trust-number">{incumbentData.cases}</span>
              <span class="trust-label">件の対応</span>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>


  <div class="container">
    <div class="two-column-layout">
      <!-- メインコンテンツ -->
      <div class="main-content">
        <!-- =====================================
             3-2. 重点ブロック（TOP中段）
             ===================================== -->

        <!-- 重点政策 -->
        <section id="policy" class="section-block policy-section">
          <h2 class="section-title"><span>重点政策</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_fistpump.png')} alt="" class="section-title-kokusa" /></span></h2>
          {featuredPolicies.length > 0 ? (
            <div class="policy-cards policy-cards-linked">
              {featuredPolicies.map((policy) => (
                <a href={withBase(`/policy/${policy.data.slug || policy.id.replace(/\.mdx?$/, '')}/`)} class="policy-card-link-wrapper">
                  <article class="policy-card">
                    <span class="policy-category">{policy.data.category}</span>
                    <h3 class="policy-card-title">{policy.data.title}</h3>
                    <p class="policy-card-summary" set:html={formatSummary(policy.data.summary)}></p>
                    <span class="policy-card-arrow">→</span>
                  </article>
                </a>
              ))}
            </div>
          ) : (
            <p class="no-content">政策を準備中です。</p>
          )}
          <div class="section-more">
            <a href={withBase('/policy/')} class="btn btn-outline">政策一覧を見る</a>
          </div>
        </section>

        <!-- 伝えたいこと：政治家の動機・原体験 -->
        {siteConfig.messages && siteConfig.messages.length > 0 && (
          <section id="message" class="section-block messages-section">
            <h2 class="section-title"><span>伝えたいこと</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_speech.png')} alt="" class="section-title-kokusa" /></span></h2>
            <div class="messages-list">
              {siteConfig.messages.map((item) => (
                <div class="message-item">
                  <h3 class="message-question">{item.question}</h3>
                  <p class="message-answer">{item.answer}</p>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- SP向けプロフィール（玉木方式）：メッセージと活動報告の間 -->
        <section class="mobile-profile-section">
          <div class="mobile-profile-content">
            {profile.nickname && <p class="mobile-profile-nickname" set:html={formatWithEmphasis(profile.nickname)} />}
            <h3 class="mobile-profile-name">{profile.name}</h3>
            <div class="mobile-profile-image-wrapper">
              <img
                src={withImageBase(profile.photo)}
                alt={`${profile.name}のプロフィール写真`}
                class="mobile-profile-image"
                loading="lazy"
              />
            </div>
            {profile.basicInfo?.electoralDistrict && profile.basicInfo.electoralDistrict.district && (
              <p class="mobile-profile-district">
                {profile.basicInfo.electoralDistrict.type && `${profile.basicInfo.electoralDistrict.type} `}
                {profile.basicInfo.electoralDistrict.term && `${profile.basicInfo.electoralDistrict.term}期 `}
                {profile.basicInfo.electoralDistrict.district}
                {profile.basicInfo.electoralDistrict.cities && profile.basicInfo.electoralDistrict.cities.length > 0 && (
                  <span class="mobile-profile-cities">（{profile.basicInfo.electoralDistrict.cities.join('、')}）</span>
                )}
              </p>
            )}
            <a href={withBase('/profile/')} class="btn btn-outline mobile-profile-btn">
              プロフィールを見る
            </a>
          </div>
        </section>

        <!-- 最新活動：3件（議会/地域/メディアを混ぜる） -->
        <section id="activity" class="section-block">
          <h2 class="section-title"><span>最新の活動報告</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_run.png')} alt="" class="section-title-kokusa" /></span></h2>
          {latestActivities.length > 0 ? (
            <ul class="activity-list">
              {latestActivities.map((entry) => (
                <li class="activity-item">
                  <a href={withBase(`/activity/${entry.id.replace('.md', '')}/`)} class="activity-link">
                    {entry.data.category && (
                      <span class="activity-category">{entry.data.category}</span>
                    )}
                    <time class="activity-date" datetime={entry.data.date.toISOString()}>
                      {formatDate(entry.data.date)}
                    </time>
                    <h3 class="activity-title">{entry.data.title}</h3>
                    <p class="activity-description">{entry.data.description}</p>
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            <p class="no-content">現在、活動報告はありません。</p>
          )}
          <div class="section-more">
            <a href={withBase('/activity/')} class="btn btn-outline">活動報告一覧を見る</a>
          </div>
        </section>

        <!-- 相談誘導セクション（活動報告の下） -->
        <section class="consultation-cta">
          <img src={withImageBase('/images/common/kokusa/kokusa_listen.png')} alt="" class="consultation-kokusa consultation-kokusa-left" />
          <div class="consultation-cta-content">
            <h2 class="consultation-cta-title">お困りごと、ありませんか？</h2>
            <p class="consultation-cta-description">
              地域の課題やお困りごとをお聞かせください。<br />
              一つひとつ丁寧にお応えします。
            </p>
            <div class="consultation-cta-buttons">
              <a href={withBase(siteConfig.cta.primary.url)} class="btn btn-primary btn-large">
                {siteConfig.cta.primary.label}
              </a>
            </div>
            <p class="consultation-cta-note">※ 個人情報は厳重に管理いたします</p>
          </div>
          <img src={withImageBase('/images/common/kokusa/kokusa_please.png')} alt="" class="consultation-kokusa consultation-kokusa-right" />
        </section>

        <!-- FAQ：3件（誤解されやすい点を先回り） -->
        <section id="faq" class="section-block">
          <h2 class="section-title"><span>よくある質問</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_think.png')} alt="" class="section-title-kokusa" /></span></h2>
          {featuredFaq.length > 0 ? (
            <div class="faq-list">
              {featuredFaq.map((item) => (
                <details class="faq-item">
                  <summary class="faq-question">{item.question}</summary>
                  <p class="faq-answer">{item.answer}</p>
                </details>
              ))}
            </div>
          ) : (
            <p class="no-content">FAQを準備中です。</p>
          )}
          <div class="section-more">
            <a href={withBase('/faq/')} class="btn btn-outline">よくある質問一覧</a>
          </div>
        </section>

        <!-- 支援のお願い（党サポ・寄付・後援会） -->
        <section class="support-section">
          <h2 class="section-title"><span>応援してください</span><span class="section-title-kokusa-wrapper"><img src={withImageBase('/images/common/kokusa/kokusa_bow.png')} alt="" class="section-title-kokusa" /></span></h2>
          <p class="support-lead">皆様のご支援が、政治活動の力になります。</p>
          <div class="support-cards">
            <a href="https://www.dpfp.or.jp/supporter" target="_blank" rel="noopener noreferrer" class="support-card support-card-party">
              <img src={withImageBase('/images/common/kokusa/kokusa_cheer.png')} alt="" class="support-card-kokusa" />
              <div class="support-card-text">
                <h3 class="support-card-title">党サポーター</h3>
                <p class="support-card-description">国民民主党を応援するサポーターになる</p>
              </div>
            </a>
            <a href={withBase('/support/#supporters-club')} class="support-card support-card-club">
              <img src={withImageBase('/images/common/kokusa/kokusa_rally.png')} alt="" class="support-card-kokusa" />
              <div class="support-card-text">
                <h3 class="support-card-title">後援会に入る</h3>
                <p class="support-card-description">地域の仲間と一緒に活動する</p>
              </div>
            </a>
            <a href={withBase('/support/#volunteer')} class="support-card support-card-volunteer">
              <img src={withImageBase('/images/common/kokusa/kokusa_fistpump.png')} alt="" class="support-card-kokusa" />
              <div class="support-card-text">
                <h3 class="support-card-title">ボランティア</h3>
                <p class="support-card-description">ポスティングやイベントのお手伝い</p>
              </div>
            </a>
            <a href={withBase('/support/#donation')} class="support-card support-card-donation">
              <img src={withImageBase('/images/common/kokusa/kokusa_good.png')} alt="" class="support-card-kokusa" />
              <div class="support-card-text">
                <h3 class="support-card-title">寄付で応援</h3>
                <p class="support-card-description">政治活動を資金面で支える</p>
              </div>
            </a>
          </div>
        </section>
      </div>

      <!-- =====================================
           サイドバー（PCのみ表示）
           ===================================== -->
      <aside class="sidebar">
        <!-- 3-3. プロフィール（玉木方式）：二つ名、名前、写真、選挙区 -->
        <div class="sidebar-widget profile-widget">
          {profile.nickname && <p class="profile-nickname" set:html={formatWithEmphasis(profile.nickname)} />}
          <h3 class="profile-name">{profile.name}</h3>
          <div class="profile-image-wrapper">
            <img
              src={withImageBase(profile.photo)}
              alt={`${profile.name}のプロフィール写真`}
              class="profile-image"
              loading="lazy"
            />
          </div>
          {profile.basicInfo?.electoralDistrict && profile.basicInfo.electoralDistrict.district && (
            <p class="profile-district">
              {profile.basicInfo.electoralDistrict.type && `${profile.basicInfo.electoralDistrict.type} `}
              {profile.basicInfo.electoralDistrict.term && `${profile.basicInfo.electoralDistrict.term}期 `}
              {profile.basicInfo.electoralDistrict.district}
              {profile.basicInfo.electoralDistrict.cities && profile.basicInfo.electoralDistrict.cities.length > 0 && (
                <span class="profile-cities">（{profile.basicInfo.electoralDistrict.cities.join('、')}）</span>
              )}
            </p>
          )}
          <a href={withBase('/profile/')} class="btn btn-outline" style="width: 100%;">
            プロフィールを見る
          </a>
        </div>

        <!-- 3-3. 相談・要望（再掲CTA） -->
        <div class="sidebar-widget cta-widget">
          <img src={withImageBase('/images/common/kokusa/kokusa_raisehand.png')} alt="" class="sidebar-kokusa" />
          <h3>ご相談・ご要望</h3>
          <p>地域の課題やご意見をお聞かせください。一つひとつ丁寧にお応えします。</p>
          <a href={withBase(siteConfig.cta.primary.url)} class="btn btn-primary" style="width: 100%;">
            {siteConfig.cta.primary.label}
          </a>
        </div>

        <!-- SNSフォロー -->
        {(siteConfig.social.twitter || siteConfig.social.facebook || siteConfig.social.instagram || siteConfig.social.youtube || siteConfig.social.line) && (
          <div class="sidebar-widget social-widget">
            <h3>SNSで最新情報</h3>
            <div class="social-links">
              {siteConfig.social.twitter && (
                <a href={siteConfig.social.twitter} class="social-link" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
                  X
                </a>
              )}
              {siteConfig.social.facebook && (
                <a href={siteConfig.social.facebook} class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                  FB
                </a>
              )}
              {siteConfig.social.instagram && (
                <a href={siteConfig.social.instagram} class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                  IG
                </a>
              )}
              {siteConfig.social.youtube && (
                <a href={siteConfig.social.youtube} class="social-link" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
                  YT
                </a>
              )}
              {siteConfig.social.line && (
                <a href={siteConfig.social.line} class="social-link" target="_blank" rel="noopener noreferrer" aria-label="LINE">
                  LINE
                </a>
              )}
            </div>
          </div>
        )}
      </aside>
    </div>
  </div>
</main>

<style>
  /* =====================================
     ファーストビュー
     ===================================== */
  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .btn-primary-hero {
    background: #fff;
    color: #043e80;
    padding: 0.875rem 2rem;
    font-weight: bold;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .btn-primary-hero:hover {
    background: #f0f0f0;
    text-decoration: none;
  }

  .btn-secondary-hero {
    background: transparent;
    color: #fff;
    padding: 0.875rem 2rem;
    font-weight: bold;
    border: 2px solid #fff;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .btn-secondary-hero:hover {
    background: rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  /* ヒーロータイトル強調（*囲み文字） */
  .hero-title {
    white-space: nowrap;
  }

  .hero-subtitle {
    white-space: nowrap;
    text-align: center;
    width: 100%;
  }

  :global(.hero-emphasis) {
    color: #c41e3a;
    background: #fff;
    font-size: 1.4em;
    font-weight: 900;
    padding: 0.1em 0.4em;
    border-radius: 2px;
    text-decoration: underline;
    text-decoration-color: #c41e3a;
    text-decoration-thickness: 4px;
    text-underline-offset: 4px;
    white-space: nowrap;
  }

  /* レスポンシブ：タブレット */
  @media (max-width: 1024px) {
    :global(.hero-emphasis) {
      font-size: 1.3em;
      text-decoration-thickness: 3px;
      text-underline-offset: 3px;
    }
  }

  /* レスポンシブ：スマートフォン */
  @media (max-width: 767px) {
    .hero-title {
      font-size: clamp(1rem, 4.5vw, 1.5rem);
      text-align: center;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    :global(.hero-emphasis) {
      font-size: 1.2em;
      padding: 0.05em 0.2em;
      text-decoration-thickness: 2px;
      text-underline-offset: 2px;
    }

    .hero-content-below .container,
    .hero-content,
    .hero-diagonal-content {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      box-sizing: border-box;
    }
  }

  /* レスポンシブ：小さいスマートフォン */
  @media (max-width: 480px) {
    .hero-title {
      font-size: clamp(0.9rem, 4vw, 1.2rem);
    }

    :global(.hero-emphasis) {
      font-size: 1.15em;
      padding: 0.05em 0.15em;
    }
  }

  /* 信頼要素 */
  .trust-elements {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .trust-item {
    text-align: center;
  }

  .trust-number {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: #fff;
  }

  .trust-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .trust-updated {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    width: 100%;
    margin-top: 0.5rem;
  }

  .trust-elements--newcomer {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .trust-item-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #fff;
    font-size: 0.9375rem;
  }

  .trust-label-icon {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.75rem;
  }

  /* =====================================
     セクション共通
     ===================================== */
  .section-block {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.5rem;
    color: #043e80;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #043e80;
  }

  .section-more {
    margin-top: 1.5rem;
    text-align: center;
  }

  .btn-outline {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: #043e80;
    border: 2px solid #043e80;
    border-radius: 4px;
    font-weight: bold;
    transition: all 0.2s;
  }

  .btn-outline:hover {
    background: #043e80;
    color: #fff;
    text-decoration: none;
  }

  .btn-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #043e80;
    color: #fff;
    border-radius: 4px;
    font-weight: bold;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: #032f5e;
    text-decoration: none;
  }

  .no-content {
    color: #666;
    padding: 2rem;
    text-align: center;
    background: #f9f9f9;
    border-radius: 8px;
  }

  /* 共通スタイル */
  .policy-category {
    display: inline-block;
    background: #e8f0f8;
    color: #043e80;
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 3px;
    min-width: 6em;
    text-align: center;
    box-sizing: border-box;
    white-space: nowrap;
  }

  /* =====================================
     政策レイアウト1: カード全体リンク
     ===================================== */
  .policy-cards {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .policy-cards {
      grid-template-columns: repeat(3, 1fr);
