<script>
  // レイアウト切り替え用スクリプト
  (function() {
    const params = new URLSearchParams(window.location.search);
    const topLayout = params.get('top') || '1'; // デフォルトはTOP1

    // すべてのヒーローセクションを非表示
    document.querySelectorAll('[data-hero-layout]').forEach(section => {
      section.classList.remove('active');
    });

    // 指定されたレイアウトを表示
    const activeSection = document.querySelector(`[data-hero-layout="${topLayout}"]`);
    if (activeSection) {
      activeSection.classList.add('active');
    } else {
      // 無効な値の場合はデフォルト（TOP1）を表示
      const defaultSection = document.querySelector('[data-hero-layout="1"]');
      if (defaultSection) defaultSection.classList.add('active');
    }

    // 政策セクションもTOPレイアウトに連動して切り替え
    document.querySelectorAll('[data-policy-layout]').forEach(section => {
      section.classList.remove('active');
    });

    const activePolicySection = document.querySelector(`[data-policy-layout="${topLayout}"]`);
    if (activePolicySection) {
      activePolicySection.classList.add('active');
    } else {
      // 無効な値の場合はデフォルト（レイアウト1）を表示
      const defaultPolicySection = document.querySelector('[data-policy-layout="1"]');
      if (defaultPolicySection) defaultPolicySection.classList.add('active');
    }

    // ヘッダーのスイッチャーリンクにactiveクラスを設定
    document.querySelectorAll('.switcher-link[data-top-layout]').forEach(link => {
      const linkTop = link.getAttribute('data-top-layout');
      if (linkTop === topLayout) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  })();
</script>
