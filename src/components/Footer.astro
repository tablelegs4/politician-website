---
// フッターコンポーネント
const currentYear = new Date().getFullYear();

// ベースパスを適用したパスを生成する関数
const baseUrl = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}`;
};
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <nav class="footer-nav" aria-label="フッターナビゲーション">
        <ul>
          <li><a href={withBase('/profile/')}>プロフィール</a></li>
          <li><a href={withBase('/policy/')}>政策</a></li>
          <li><a href={withBase('/news/')}>お知らせ</a></li>
          <li><a href={withBase('/contact/')}>お問い合わせ</a></li>
          <li><a href={withBase('/privacy/')}>プライバシーポリシー</a></li>
        </ul>
      </nav>
      <p class="copyright">&copy; {currentYear} 山田太郎. All rights reserved.</p>
    </div>
  </div>
</footer>
