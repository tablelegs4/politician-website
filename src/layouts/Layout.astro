    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('fontSizeToggle');
        if (!toggle) return;

        const buttons = toggle.querySelectorAll<HTMLButtonElement>('.font-size-btn');
        const html = document.documentElement;

        // LocalStorageから保存されたサイズを復元
        const savedSize = localStorage.getItem('fontSize') || 'medium';
        applyFontSize(savedSize);

        buttons.forEach(btn => {
          btn.addEventListener('click', () => {
            const size = btn.dataset.size;
            if (size) {
              applyFontSize(size);
              localStorage.setItem('fontSize', size);
            }
          });
        });

        function applyFontSize(size: string) {
          // クラスをリセット
          html.classList.remove('font-size-small', 'font-size-large');

          // 新しいサイズクラスを適用
          if (size === 'small') {
            html.classList.add('font-size-small');
          } else if (size === 'large') {
            html.classList.add('font-size-large');
          }

          // ボタンのアクティブ状態を更新
          buttons.forEach(b => {
            b.classList.toggle('active', b.dataset.size === size);
          });
        }
      });
    </script>
