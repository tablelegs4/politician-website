---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getSiteConfig } from '../utils/content';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  ogType?: string;
  canonical?: string;
}

const siteConfig = getSiteConfig();

const {
  title,
  description,
  ogImage = siteConfig.ogp?.image || '/images/ogp.jpg',
  ogType = 'website',
  canonical
} = Astro.props;

const siteUrl = import.meta.env.SITE || 'https://example.com';
const baseUrl = import.meta.env.BASE_URL || '/';
const fullTitle = `${title} | ${siteConfig.siteName}`;
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = new URL(ogImage, siteUrl).href;

// ベースパスを適用したパスを生成する関数
const withBase = (path: string) => {
  if (path.startsWith('http://') || path.startsWith('https://') || path.startsWith('//')) {
    return path;
  }
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  const cleanPath = path.startsWith('/') ? path : `/${path}`;
  return `${base}${cleanPath}`;
};
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <link rel="canonical" href={canonicalUrl} />

    <!-- OGP -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content={siteConfig.siteName} />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href={withBase('/favicon.ico')} />
    <link rel="apple-touch-icon" sizes="180x180" href={withBase('/apple-touch-icon.png')} />

    <!-- テーマカラー -->
    <meta name="theme-color" content="#043e80" />

    <!-- 手書き風フォント（Google Fonts） -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Yuji+Syuku&display=swap" rel="stylesheet" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
